\begin_layout Standard
Důležité vzorce
\end_layout

\begin_layout Standard
\begin_inset Box Shadowbox
position "t"
hor_pos "c"
has_inner_box 1
inner_pos "t"
use_parbox 0
use_makebox 0
width "100col%"
special "none"
height "1in"
height_special "totalheight"
status open

\begin_layout Plain Layout
\begin_inset Formula 
\begin{eqnarray*}
Emin\left\{ S,T\right\}  & = & \frac{1}{\lambda+\mu}\\
Emax\left\{ S,T\right\}  & = & E\left(S\right)+E\left(T\right)-Emin\left\{ S,T\right\} 
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Plain Layout
Za předpokladu
\begin_inset Formula 
\[
S\sim\text{Exp}\left(\lambda\right),\, T\sim\text{Exp}\left(\mu\right)
\]

\end_inset


\end_layout

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
S_{1}\sim\text{Exp}\left(\lambda\right),\, E\left(S_{1}\right)=25ms,\,\lambda=\frac{1}{E\left(S_{1}\right)}\rightarrow\lambda=\frac{1}{25}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
S_{2}\sim\text{Exp}\left(\mu\right),\, E\left(S_{2}\right)=25ms,\,\mu=\frac{1}{E\left(S_{2}\right)}\rightarrow\mu=\frac{1}{25}
\]

\end_inset


\end_layout

\begin_layout Standard

\series bold
A)
\end_layout

\begin_layout Standard
\begin_inset Formula $S_{1}$
\end_inset

a 
\begin_inset Formula $S_{2}$
\end_inset

 jsou obsazené, čekáme tedy, až se jeden z nich uvolní (ten nejrychlejší).
\begin_inset Formula 
\[
E(C_{A})=Emin\left\{ S_{1},S_{2}\right\} +E\left(C\right)=\frac{1}{\mu+\lambda}+E\left(C\right)=\frac{1}{\frac{1}{25}+\frac{1}{25}}+25=\ldots=\uuline{37,5ms}
\]

\end_inset


\end_layout

\begin_layout Standard

\series bold
B)
\end_layout

\begin_layout Standard
Všechny tři požadavky budou zpracovány, když bude zpracován nejpomalejší
 z nich.
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
E\left(C_{B}\right) & = & Emin\left\{ S_{1},S_{2}\right\} +Emax\left\{ S_{1},S_{2}\right\} =Emin\left\{ S_{1},S_{2}\right\} +E\left(S_{1}\right)+E\left(S_{2}\right)-Emin\left\{ S_{1},S_{2}\right\} =\\
 &  & =E\left(S_{1}\right)+E\left(S_{2}\right)=25+25=\uuline{50ms}
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard

\series bold
C)
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
P\left(C_{L}\right) & = & P\left(C_{L}\cap A_{F}\right)+P\left(C_{L}\cap B_{F}\right)=\frac{\mu}{\mu+\lambda}*\frac{\lambda}{\mu+\lambda}+\frac{\mu}{\mu+\lambda}*\frac{\lambda}{\mu+\lambda}=\\
 &  & =\frac{\frac{1}{25}}{\frac{1}{25}+\frac{1}{25}}*\frac{\frac{1}{25}}{\frac{1}{25}+\frac{1}{25}}+\frac{\frac{1}{25}}{\frac{1}{25}+\frac{1}{25}}*\frac{\frac{1}{25}}{\frac{1}{25}+\frac{1}{25}}=\cdots=\uuline{\frac{1}{2}}
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
Vzorec vychází z 
\begin_inset Formula 
\[
P\left(S<T\right)*P\left(S>T\right)+\ldots
\]

\end_inset


\end_layout

